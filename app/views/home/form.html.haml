%div.full_width
  =form_tag 'home/generate', :remote => true do
    %div.center{:style => 'width:300px'}
      %div.fields
        =text_field_tag 'sitcom_title', nil, :placeholder => 'Title', :id => 'sitcom_title'
        =text_field_tag 'characters[]', nil, :placeholder => 'Character', :class => 'character'
        =text_field_tag 'characters[]', nil, :placeholder => 'Character', :class => 'character'
      %div.center{:style => 'position:relative'}
        =link_to image_tag('add_48px.png'), '', :id => 'add_new_character',
                                                :class => 'circle red',
                                                :style => 'top:-15px;right:-10px'
      %br
      %div
        =submit_tag 'GENERATE', :id => 'submit_form', :class => 'button'

  %h2
    %div#results

:coffee
  $('#add_new_character').click ->
    new_tag = $('#{text_field_tag 'characters[]', nil, :placeholder => 'Character', :class => 'character'}')
    new_tag.appendTo('.fields').hide().slideDown()
    $(this).addClass('spin_left')
    setTimeout ( =>
      $(this).removeClass('spin_left')
    ), 500
    return false